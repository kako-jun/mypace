{
  "name": "mypace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -C packages/web dev",
    "dev:api": "pnpm -C packages/api dev",
    "build": "pnpm -r build",
    "deploy": "pnpm -r deploy",
    "deploy:web": "pnpm -C packages/web deploy",
    "deploy:api": "pnpm -C packages/api deploy",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "format:check": "prettier --check '**/*.{ts,tsx}'",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.48.1"
  }
}
